################################
#### Blink with ATmega168PB ####
################################

blink.name=Blinks

blink.build.board=AVR_BLINKS_BUILD

blink.upload.tool=avrdude
blink.upload.protocol=avrisp
blink.upload.maximum_size=15872
blink.upload.maximum_data_size=1024

blink.build.core=blinks

blink.build.variant=standard

blink.build.mcu=atmega168pb

# Always enable compiler link time optimization

blink.compiler.c.extra_flags=-Wextra -flto
blink.compiler.c.elf.extra_flags=-w -flto
blink.compiler.cpp.extra_flags=-Wextra -flto
blink.ltoarcmd=avr-gcc-ar

# Always use internal RC oscilator starting at 1Mhz 
# We will update to 4Mhz after boot and change F_CPU in the Blinks headerfile

build.f_cpu=1000000L

